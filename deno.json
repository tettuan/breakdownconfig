{
  "name": "breakdownconfig",
  "version": "1.0.0",
  "description": "A Deno library for managing application and user configurations",
  "author": "tettuan",
  "license": "MIT",
  "exports": "./src/mod.ts",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "lib": ["deno.window"],
    "types": ["deno"]
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "std/": "https://deno.land/std@0.220.1/"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write",
    "check": "deno check src/mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
} 