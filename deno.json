{
  "name": "@tettuan/breakdownconfig",
  "version": "1.0.4",
  "description": "A Deno library for managing application and user configurations",
  "author": "tettuan",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": ["src/", "mod.ts", "README.md", "LICENSE"],
    "exclude": ["tests/", "tmp/", "docs/"]
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"],
    "types": ["deno"]
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "@std/assert": "jsr:@std/assert@^1.0.11",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^0.1.10"
  },
  "importMap": "./import_map.json",
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-env",
    "check": "deno check src/mod.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
} 