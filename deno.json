{
  "name": "@tettuan/breakdownconfig",
  "version": "1.1.1",
  "description": "A Deno library for managing application and user configurations",
  "author": "tettuan",
  "license": "MIT",
  "exports": "./mod.ts",
  "publish": {
    "include": [
      "src/",
      "mod.ts",
      "README.md",
      "LICENSE"
    ],
    "exclude": [
      "tests/",
      "tmp/",
      "docs/"
    ]
  },
  "compilerOptions": {
    "lib": [
      "deno.window",
      "deno.ns"
    ]
  },
  "lint": {
    "include": [
      "src/",
      "tests/"
    ],
    "exclude": [
      "README.md",
      "CHANGELOG.md"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "include": [
      "src/",
      "tests/",
      "mod.ts"
    ],
    "exclude": [
      "README.md",
      "CHANGELOG.md"
    ],
    "indentWidth": 2,
    "lineWidth": 100,
    "singleQuote": false,
    "proseWrap": "preserve",
    "semiColons": true,
    "useTabs": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "@std/assert/assert_equals": "jsr:@std/assert@^0.224.0/assert-equals",
    "@std/assert/assert_rejects": "jsr:@std/assert@^0.224.0/assert-rejects",
    "@std/testing": "jsr:@std/testing@^0.224.0",
    "@std/testing/bdd": "jsr:@std/testing@^0.224.0/bdd",
    "@std/path": "jsr:@std/path@^0.224.0",
    "@std/yaml": "jsr:@std/yaml@^0.224.0",
    "@std/fs": "jsr:@std/fs@^0.224.0",
    "@std/expect": "jsr:@std/expect@^0.224.0",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^0.1.10"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-env",
    "check": "deno check **/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "ci": "scripts/local_ci.sh"
  }
}
